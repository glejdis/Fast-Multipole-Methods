%%%%%%%%%%%%%%%%%%%%%%%% Aufzaehlungen und Listen %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Enumerate item
\setbeamercolor{enumerate item}{fg=faublue}
\setbeamercolor{enumerate subitem}{fg=faublue}
\setbeamercolor{enumerate subsubitem}{fg=faublue}

% Itemize item
\setbeamercolor{itemize item}{fg=faublue}
\setbeamercolor{itemize subitem}{fg=faublue}
\setbeamercolor{itemize subsubitem}{fg=faublue}

% Description item
\setbeamercolor{description item}{fg=faublue}
\setbeamercolor{description subitem}{fg=faublue}
\setbeamercolor{description subsubitem}{fg=faublue}

%%%%%%%%%%%%%%%%%%%%%% Aufzaehlungen und Listen Ende %%%%%%%%%%%%%%%%%%%%%%%%%%%

% Block environment

\setbeamercolor{block title}{use=structure,fg=white,bg=faulb2!75!black}
\setbeamercolor{block title alerted}{use=alerted text,fg=white,bg=fauredtitle}
\setbeamercolor{block title example}{use=example text,fg=fauwhite,bg=faubluetitle}

\setbeamercolor{block body}{parent=structure,fg=black,use=block title,bg=faubluefg}
\setbeamercolor{block body alerted}{parent=alerted text,fg=black,use=block title alerted,bg=fauredfg}
\setbeamercolor{block body example}{parent=example text,fg=black,use=block title example,bg=faubluefg}

