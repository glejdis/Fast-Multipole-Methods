%-------------------------------------------------------------------------------
% Font theme file
%-------------------------------------------------------------------------------

\mode<presentation>


% Schriftart Helvetica
%
\usepackage[scaled]{helvet}
\renewcommand*{\familydefault}{\sfdefault} % Standard ist serifenlos

\AtBeginDocument{\fontsize{18}{20}\selectfont}

% normaler Text
\setbeamerfont{normal text}{size=\fontsize{14}{16}} % ignored currently, its not implemented yet!

% Titel
\setbeamerfont{title}{series=\bfseries,size=\fontsize{36}{42}}
\setbeamerfont{subtitle}{series=\normalfont,size=\fontsize{36}{42}}
\setbeamerfont{frametitle}{size=\fontsize{24}{28},series=\bfseries}

% Fusszeile
\setbeamerfont{footline}{size=\fontsize{10}{12}}

%%%%%%%%%%%%%%%%%%%%%%%% Aufzaehlungen und Listen %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Enumerate item
\setbeamerfont{enumerate item}{size=\fontsize{16}{18}}
\setbeamerfont{enumerate subitem}{size=\fontsize{16}{18}}
\setbeamerfont{enumerate subsubitem}{size=\fontsize{16}{18}}

% Itemize item
\setbeamerfont{itemize item}{size=\fontsize{16}{18}}
\setbeamerfont{itemize subitem}{size=\fontsize{16}{18}}
\setbeamerfont{itemize subsubitem}{size=\fontsize{16}{18}}

% Enumerate and itemize body
\setbeamerfont{itemize/enumerate body}{size=\fontsize{16}{18}}
\setbeamerfont{itemize/enumerate subbody}{size=\fontsize{16}{18}}
\setbeamerfont{itemize/enumerate subsubbody}{size=\fontsize{16}{18}}
%%%%%%%%%%%%%%%%%%%%%% Aufzaehlungen und Listen Ende %%%%%%%%%%%%%%%%%%%%%%%%%%%

\setbeamerfont{block body}{}                                                     
\setbeamerfont{block body alerted}{}                                             
\setbeamerfont{block body example}{}                                             
\setbeamerfont{block title}{size=\fontsize{18}{22},parent={structure,block body}}
\setbeamerfont{block title alerted}{size=\fontsize{24}{28},parent={block title,alerted text}}
\setbeamerfont{block title example}{size=\fontsize{24}{28},parent={block title,example text}}

\setbeamerfont{bibliography item}{size=\fontsize{16}{18}}
\setbeamerfont{bibliography entry item}{size=\fontsize{16}{18}}
\setbeamerfont{bibliography entry title}{size=\fontsize{16}{18}}
\setbeamerfont{bibliography entry location}{size=\fontsize{16}{18}}
\setbeamerfont{bibliography entry note}{size=\fontsize{16}{18}}

\mode
<all>
